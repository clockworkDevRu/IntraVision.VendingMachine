

<div class="drop-file-block">

    <div class="upload-progress-bar"></div>

    <form class="" id="importForm">
        @Html.AntiForgeryToken()
        <div class="form-check mb-1">
            <input type="checkbox" class="form-check-input" id="cbRewriteDrinks">
            <label class="form-check-label" for="cbRewriteDrinks">Очистить перед записью</label>
        </div>
        <div class="form-group upload-btn">
            <input type="file" class="btn btn-dark" accept="application/vnd.ms-excel, application/vnd.openxmlformats-officedocument.spreadsheetml.sheet" name="importFile" id="importFile" value="Выбрать..." />
            <span class="form-text text-muted upload-status">или перетащите файл в эту область</span>
        </div>
    </form>

</div>

<div class="modal-footer">
    <button type="button" class="btn btn-light" data-dismiss="modal" aria-label="Close">Закрыть</button>
</div>